<body>

<div class="container-fluid">
<div class="row">
    <nav class=" header col-12 navbar navbar-light bg-dark">
        <a id="mainpage" class="navbar" href="/">
        <img src="/images/bike-logo.svg" width="50" height="50" class="logo" alt="">
            The Bike Shop Experience
        </a>
        
    </nav>
</div>
  
  <div class="row" > 
    <div class="col-12 jumbotron jumbotron-fluid" id="picture-header ">
        <div class="container"></div>
    </div>
  </div>
 

   <!-- BIKES SECTION: initializing of the grid here -->
   
       <div class="row">
        <%
        for(var i=0; i<dataBike.length; i++){
        %>
            <div class="col-xs-12 col-sm-6 col-md-4">
                <div class="card">
                        <img src=<%= dataBike[i].src %> class="card-img-top">
                        <div class="card-body text-center">
                            <h5 class="card-title"><%= dataBike[i].name %></h5>
                            <span><%= dataBike[i].price %>â‚¬</span>
                            <a href="/shop?bikeSrc=<%= dataBike[i].src %>&bikeName=<%= dataBike[i].name %>&bikePrice=<%= dataBike[i].price %>" class="btn btn-outline-info btn-sm" role="button">Buy</a>
                        </div>
                </div>
           </div>
        <%
        }
        %>
            
           
           
  
 
